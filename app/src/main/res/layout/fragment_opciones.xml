<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo oscuro"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <Switch
                android:id="@+id/switchModoOscuro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnPreferencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configurar preferencias emocionales"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/textResumenPreferencias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resumen de preferencias"
                android:paddingTop="8dp"
                android:textColor="#666666" />

            <Button
                android:id="@+id/btnCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerrar sesiÃ³n"
                android:layout_marginTop="24dp" />

            <TextView
                android:id="@+id/textAcerca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acerca de"
                android:textColor="#2196F3"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </ScrollView>
</layout>
